@model IEnumerable<Slider>
<div class="container">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Slayd cədvəli</h4>
                    <p class="card-description">
                        <a asp-controller="slider" asp-action="create" class="btn btn-success">Yarat</a>
                    </p>
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Şəkil</th>
                                    <th>Başlıq</th>
                                    <th>Alt Başlıq</th>
                                    <th>Parametrlər</th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var slider in Model)
                                {
                                    <tr>
                                        <td><img src="~/uploads/images/@slider.ImageUrl" width="150" height="150" /></td>
                                        <td>@slider.Title</td>
                                        <td>@slider.SubTitle</td>
                                        <td>
                                            <a asp-action="update" asp-route-id="@slider.Id" class="btn btn-success"><i class="fa-solid fa-pen-to-square"></i></a>
                                            <a asp-action="detail" asp-route-id="@slider.Id" class="btn btn-primary"><i class="fa-solid fa-circle-info"></i></a>
                                            <a asp-action="delete" asp-route-id="@slider.Id" class="btn btn-danger text-white"><i class="fa-solid fa-trash"></i></a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>