@using CozaStore.MVC.Application.DTOs.SliderDTOs
@model SliderCreateDTO
<div class="container">
    <div class="row">
        <div class="col-md-6 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Slayd cədvəlinin yaradılması</h4>

                    <form method="post" enctype="multipart/form-data" class="forms-sample">
                        <div class="form-group">
                            <label asp-for="Title">Başlıq</label>
                            <input asp-for="Title" class="form-control" placeholder="Başlıq daxil edin">
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="SubTitle">Açıqlama</label>
                            <input asp-for="SubTitle" class="form-control" placeholder="Açıqlama daxil edin">
                            <span asp-validation-for="SubTitle" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Photo">Şəkil</label>
                            <input asp-for="Photo" class="form-control">
                            <span asp-validation-for="Photo" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn btn-primary mr-2">Yadda saxla</button>
                        <a asp-action="index" class="btn btn-warning">Ləğv et</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>