@using CozaStore.Application.DTOs.SizeDTOs
@model SizeCreateDTO
<div class="container">
    <div class="row">
        <div class="col-md-6 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Ölçünün yaradılması</h4>

                    <form method="post" class="forms-sample">
                        <div class="form-group">
                            <label asp-for="Name">Ad</label>
                            <input asp-for="Name" class="form-control" placeholder="Ad daxil edin">
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn btn-primary mr-2">Yadda saxla</button>
                        <a asp-action="index" class="btn btn-warning">Ləğv et</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>