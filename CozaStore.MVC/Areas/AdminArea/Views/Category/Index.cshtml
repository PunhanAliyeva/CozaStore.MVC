@model IEnumerable<Category>
<div class="container">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Kateqoriya cədvəli</h4>
                    <p class="card-description">
                        <a asp-controller="category" asp-action="create" class="btn btn-warning">Yarat</a>
                    </p>
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Şəkil</th>
                                    <th>Ad</th>
                                    <th>Mövzu</th>
                                    <th>Parametrlər</th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var category in Model)
                                {
                                    <tr>
                                        <td><img src="~/uploads/images/@category.ImageUrl" width="150" height="150" /></td>
                                        <td>@category.Name</td>
                                        <td>@category.Concept</td>
                                        <td>
                                            <a asp-action="update" asp-route-id="@category.Id" class="btn btn-success"><i class="fa-solid fa-pen-to-square"></i></a>
                                            <a asp-action="detail" asp-route-id="@category.Id" class="btn btn-primary"><i class="fa-solid fa-circle-info"></i></a>
                                            <button class="btn btn-danger delete-category" data-id="@category.Id"><i class="fa-solid fa-trash"></i></button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script>
        $(document).ready(function () {
            $(".delete-category").click(function () {
                var button = $(this);
                var id = button.data("id");

                Swal.fire({
                    title: 'Silmək istədiyinizə əminsiniz?',
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#d33',
                    confirmButtonText: 'Bəli, sil!',
                    cancelButtonText: 'İmtina'
                }).then((result) => {
                    if (result.isConfirmed) {
                        $.ajax({
                            url: '/AdminArea/Category/Delete/' + id,
                            type: 'POST',
                            success: function (response) {
                                if (response.success) {
                                    Swal.fire(
                                        'Silindi!',
                                        'Slayd uğurla silindi.',
                                        'success'
                                    ).then(() => {
                                        location.reload(); // Səhifəni yenilə
                                    });
                                }
                                else {
                                    Swal.fire('Xəta!', response.message, 'error');
                                }
                            }
                        });
                    }
                });
            });
        });
    </script>
}